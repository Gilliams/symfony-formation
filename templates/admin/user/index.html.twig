{% extends 'admin/base.html.twig' %}

{% block title %}Administrations des utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Administrations des utilisateurs</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Prenom</th>
                    <th>Nom</th>
                    <th class="text-center">Email</th>
                    <th>Photo</th>
                    <th>Introduction</th>
                    <th class="text-center">Description</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for user in pagination.data %}
                <tr>
                    <td>{{user.id}}</td>
                    <td>{{user.firstName}}</td>
                    <td>{{user.lastName}}</td>
                    <td class="text-center">{{user.email}}</td>
                    <td>
                        <img src="{{user.picture}}" alt="Avatar de {{user.fullName}}" class="avatar avatar-medium mr-2">
                    </td>
                    <td>
                        <p>{{user.introduction}}</p>
                    </td>
                    <td>
                        <p>{{user.description}}</p>
                    </td>
                    <td>
                        <a href="{{ path("admin_user_edit", {'id':user.id}) }}" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                    </td>
                    <td>
                        <a href="{{ path("admin_user_delete", {'id':user.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ pagination.display() }}
    </div>
{% endblock %}
